		<!-- End Section-1 -->

		<section class='section-2'>
			<div class='container'>
				<h2 class='text-center'>
					Curious About Pricing? or want to meet our Agents?
					<hr>
				</h2>
				<form action='/pricing' method='GET' class='float-left'>
					<button class="btn btn-lg btn-outline-primary btn-block">
						See Our Pricing page
					</button>
				</form>
				<form action='/about' method='GET' class='float-right'>
					<button class="btn btn-lg btn-outline-success btn-block">
						About us
					</button>
				</form>
			</div>
		</section>

		<Section class='section-3'>
			<div class='container'>
				<h3 class='text-center'>
					Contact Us if you want to get the most out of your House Experience!
					<hr>
				</h3>
				<form action='/' method='POST'>
					<div class='contact'>
						<div class='form-group'>
							<label for='name'>Name:</label>
							<input class='form-control' type='text' name='name' placeholder='Full Name' required>
						</div>
						<div class='form-group'>
							<label for='email'>E-Mail:</label>
							<input class='form-control' type='email' name='email' placeholder='house@gmail.com' required>
						</div>
						<div class='form-group'>
							<label for='number'>Phone Number: <br> Dash format e.g. (123-456-7890) </label>
							<input class='form-control' type='tel' name='phone' pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" placeholder='123-456-7890' data-valid-example='123-456-7890' required>
						</div>
					</div>
						<button class="btn btn-lg btn-outline-primary btn-block bottom">
							Connect!
						</button>
					
				</form>
			</div>

